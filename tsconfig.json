{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],

      // New feature-based structure
      "@features/*": ["./src/features/*"],
      "@shared/*": ["./src/shared/*"],
      "@core/*": ["./src/core/*"],

      // Legacy aliases (for backward compatibility during migration)
      "@engine/*": ["./src/core/engine/*", "./src/engine/*"],
      "@components/*": ["./src/shared/components/*", "./src/components/*"],
      "@hooks/*": ["./src/shared/hooks/*", "./src/hooks/*"],
      "@utils/*": ["./src/core/utils/*", "./src/utils/*"],
      "@config/*": ["./src/shared/config/*", "./src/config/*"],
      "@store/*": ["./src/core/store/*", "./src/store/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
